{
    "meta": {
        "site": "https://embedthis.com/ejscript/doc/"
    },
    "control": {
        "listen": "127.0.0.1:4000"
    },
    "services": {
        "css": {
            "files": [
                "**.css*",
                "!**doc.css",
                "!*.less*",
                "!**doc.css"
            ]
        }
    },
    "debug": {
        "services": {
            "compress": false,
            "html": false,
            "js": {
                "minify": false,
                "usemin": true,
                "usemap": true
            },
            "gzip": false
        }
    },
    "release": {
        "services": {
            "reload": {
                "enable": false
            },
            "compress": true,
            "css": {
                "minify": true,
                "usemin": true,
                "usemap": false
            },
            "js": {
                "minify": true,
                "usemin": true,
                "usemap": false
            },
            "gzip": true,
            "html": {
                "options": "--remove-comments --conservative-collapse --prevent-attributes-escaping --remove-empty-attributes --remove-optional-tags"
            }
        }
    }
}
